<body>
    <h1 style="text-align: center;">orders</h1>
  
    <% orders.forEach(function(o){ %>
  
        <h2 style="text-align: center;"">New Order!</h2>
        <div style="text-align: center;">
        <p>Phone number: <%= o.phoneno %>
        </p>
        <p>Address: <%= o.address %>
        </p>
        <p>Username: <%= o.username %>
        </p>
        <form action="/rejectOrder" method="post">
            <input type="hidden" name="itemToReject" value="<%=o._id%>" >
            <button type="submit"  class="add-to-cart">Reject</button>
          </form>
          <form action="/acceptOrder" method="post">
            <input type="hidden" name="itemToAccept"  value="<%=o._id%>" >
            <button type="submit"  class="add-to-cart">Accept</button>
          </form>
        </div>  
        <div class="row">
        <% o.cart.forEach(function(oC){ %>
            <div class="menu-item">
                <img class="price-imgs"
                src="<%= oC.url %>"
                    alt="Sudzuka sandwich">
                <h1>
                    <%= oC.type %>
                </h1>
                <h3>
                    <%= oC.title %>
                </h3>
                <p>
                    <%= oC.description %>
                </p>
            </div>
        
            <% }) %>
        </div>
     <% }) %>


</body>
