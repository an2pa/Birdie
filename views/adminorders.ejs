<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurant Orders</title>
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="css/styles.css" rel="stylesheet">
</head>

<body class="bg-light">

    <header class="py-4 bg-dark text-white text-center">
        <h1 class="display-3">Orders</h1>
    </header>

    <main class="container my-5">
        <% orders.forEach(function(o){ %>
            <div class="card mb-5">
                <div class="card-header">
                    <h2 class="h4">New Order Registered!</h2>
                </div>
                <div class="card-body text-center">
                    <p><strong>Phone number:</strong> <%= o.phoneno %></p>
                    <p><strong>Address:</strong> <%= o.address %></p>
                    <p><strong>Username:</strong> <%= o.username %></p>
                </div>
                <ul class="list-group list-group-flush">
                    <% o.cart.forEach(function(oC){ %>
                        <li class="list-group-item">
                            <div class="product-container">
                                <div class="product-image">
                                    <img src="<%= oC.url %>" alt="Product image" class="product-img rounded">
                                </div>
                                <div class="product-info text-center mt-3">
                                    <h4 class="mb-1 product-title"><%= oC.title %></h4>
                                    <p class="mb-0 text-muted"><%= oC.type %></p>
                                </div>
                            </div>
                        </li>
                    <% }) %>
                </ul>
                
                
                <div class="card-footer text-center">
                    <form action="/rejectOrder" method="post" class="d-inline-block mr-2">
                        <input type="hidden" name="itemToReject" value="<%=o._id%>">
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                    <form action="/acceptOrder" method="post" class="d-inline-block">
                        <input type="hidden" name="itemToAccept" value="<%=o._id%>">
                        <button type="submit" class="btn btn-success">Accept</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </main>

</body>

</html>
