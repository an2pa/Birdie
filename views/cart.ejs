<body>
    <h1>This is your cart</h1>
    <section id="cartmenu">
        <h1 class="menuTitle" style="text-align: center;">Cart</h1>
          <div class="row">
          <!-- cart.ejs -->

<h1>Cart</h1>

<% if (cart.length > 0) { %>
  <div class="cart-items">
    <% cart.forEach(function (item) { %>
      <div class="menu-item">
        <img class="price-imgs" src="<%= item.url %>" alt="Mozzarella sandwich">
        <h3><%= item.title %></h3>
        <p><%= item.description %></p>
        <span class="price">$<%= item.price %></span>
        <form action="/deletefromcart" method="post">
          <input type="hidden" name="itemName" value="<%= item._id %>">
          <button type="submit"  class="add-to-cart">Delete</button>
        </form>
      </div>
    <% }); %>
  </div>
<% } else { %>
  <p>No items in cart.</p>
<% } %>

         
         
          <form action="/confirmOrder" method="post">
            <input type="hidden" name="cartOrder" value="<%= JSON.stringify(cart) %>">
            <button type="submit" class="add-to-cart">Confirm order</button>
          </form>

        </div>
        </section>
</body>
