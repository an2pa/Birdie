  <!-- Sandwich -->
  <section id="sandwich">
  <h1 class="menuTitle" style="text-align: center;">Sandwiches</h1>
  <div class="row">
  <% sandwich.forEach(function(p){ %>


      <div class="menu-item">
        <img class="price-imgs" src="<%= p.url %>" alt="Mozzarella sandwich">
        <h3><%= p.title %></h3>
        <p><%= p.description %></p>
        <span class="price">$<%= p.price %></span>
        <form action="/deletefrommenu" method="post">
        <div class="quantity-container">
          <label for="mozzarella-quantity">Quantity:</label>
          <input type="number" id="mozzarella-quantity" name="quantity" min="1" value="1">
        </div>
        
          <input type="hidden" name="itemName" value="<%= p._id %>">
          <button type="submit" value="<%=p.title%>" class="add-to-cart nothing" id="nothing">Delete</button>
        </form>
      </div>
   
  <% }) %>
</div> 
</section>
